Options -Indexes

# Protect sensitive files
<FilesMatch "^(\.env|\.env\.example|composer\.json|package\.json|schema\.sql|seed\.sql)$">
  Require all denied
</FilesMatch>

# Block direct access to /includes and /data and /database
RewriteEngine On
RewriteRule ^includes/ - [F,L]
RewriteRule ^data/ - [F,L]
RewriteRule ^database/ - [F,L]

